container_commands:
  01_add_conf_to_rsyslog:
    command: echo "CustomLog i\"|/usr/bin/logger -t apache -p local6.info\" combined" >> /etc/httpd/conf/httpd.confc
  02_add_conf_to_apache:
    command: echo "$template LogglyFormat,\"<%pri%>%protocol-version% %timestamp:::date-rfc3339% %HOSTNAME% %app-name% %procid% %msgid% [9ca83edf-d155-4424-940c-083abfb303ec@41058] %msg%\"" >> /etc/rsyslog.conf; echo "*.*             @@logs-01.loggly.com:514;LogglyFormat" >> /etc/rsyslog.conf
  03_restart_syslog:
    command: service rsyslog restart
  04_restart_apache:
    command: service httpd restart 
